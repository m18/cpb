{
    "db": {
        "driver": "postgres",
        "host": "localhost",
        "port": 5432,
        "name": "cpb",
        "userName": "cpb",
        "password": "cpb",
        "params": {
            "sslmode": "disable"
        }
    },
    "messages": {
        "in": {
            "p(id, name, postcode, onestr)": {
                "name": "tutorial.Person",
                "template": {
                    "id": "$id",
                    "name": "$name",
                    "home_address": {
                        "postcode": "$postcode"
                    },
                    "onestr": "$onestr"
                }
            }
        },
        "out": {
            "p": {
                "name": "tutorial.Person",
                "template": "Person: \"$name\", ($home_address.postcode) : >$onestr< - amount: \\$5"
            }
        }
    }
}